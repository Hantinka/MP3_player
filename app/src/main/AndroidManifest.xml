<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.irina.mp3" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mp3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2485fb06d63520f8755cccca0b416b65e6277b09" />

        <activity
            android:name=".ActFilesList"
            android:label="@string/title_activity_act_files_list"
            android:parentActivityName=".ActMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.irina.mp3.ActMain" />
        </activity>
        <activity
            android:name=".ActTest"
            android:label="@string/title_activity_act_test"
            android:parentActivityName=".ActMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.irina.mp3.ActMain" />
        </activity>
    </application>

</manifest>
